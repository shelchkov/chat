{
  "name": "chat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "client": "cd client && npm start",
    "start": "npm run api",
    "api": "cd api && npm run start:dev",
    "dev": "concurrently --kill-others-on-fail \"npm run api\" \"npm run client\"",
    "lint": "cd api && npm run format && cd ../client && npm run lint",
    "lint:fix": "cd api && npm run lint && npm run format && cd ../client && npm run lint:fix",
    "install:all": "npm install && cd api && npm install && cd ../client && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shelchkov/chat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shelchkov/chat/issues"
  },
  "homepage": "https://github.com/shelchkov/chat#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "typescript": "^3.9.6"
  }
}
